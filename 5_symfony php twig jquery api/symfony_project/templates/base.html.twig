<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# <link href="style.css" rel="stylesheet"> #}
        <link rel="stylesheet" href="https://bootswatch.com/4/superhero/bootstrap.min.css">
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body class=" container p-0 m-0 " style="height:80vh;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">Filmo</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    
  <div class="collapse navbar-collapse" id="navbarColor01">
  {% block ul %}
    {# {{ path('home') }} #}
    {% endblock %}
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/inscription">S'inscrire</a>
        </li>
        {% if not app.user %}
          <li class="nav-item ">
            <a class="nav-link text-success" href="{{ path('security_login') }}">Login</a>
          </li>
        {% else %}
          <li class="nav-item ">
            <a class="nav-link text-info" href="{{ path('logout') }}">logout</a>
          </li>
        {% endif %}
      </ul>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/search">
        <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
  </div>
</nav>
<div class="h-100 container d-flex flex-row m-0 p-0">
{% if not app.user %}
  {% else %}
  {# <div class =" text-success w-25 m-0 p-0"> #}
    {# <div class="d-flex flex-column m-0 p-0 align-items-stretch" data-toggle="buttons"> #}
    <div class="d-flex align-items-start flex-column mb-5" data-toggle="buttons">
      <a role="button" class="btn btn-primary " href="/inscription">Edit Preference</a>
      <a role="button" style="width: 100%" class="btn btn-primary " href="/inscription">Create</br> List</a>
      <a role="button" class="btn btn-primary " href="/inscription">Favorite List</a>
      <a role="button" class="btn btn-primary " href="/inscription">Browse List</a>
      {% block button %}
     {{ encore_entry_script_tags('app') }}
      {% endblock %}
    </div>
{% endif %}
  
  <div class ="bloccard w-25 m-0 p-0">
        {% block body %}
       {{ encore_entry_link_tags('app') }}
        {% endblock %}
  </div>
  <div id="scrollB" class ="container w-100 m-0 p-0">
  
  {% block div %}
  {{ encore_entry_link_tags('app') }}
  {% endblock %}
  </div>
  {# <div class=" container border border-primary  m-0 p-0 bg-info max-height: 100%"></div> #}
</div>
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
